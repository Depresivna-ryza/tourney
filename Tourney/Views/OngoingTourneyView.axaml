<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Tourney.Views;assembly=Tourney"
             xmlns:viewModels="clr-namespace:Tourney.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tourney.Views.OngoingTourneyView"
             x:DataType="viewModels:OngoingTourneyViewModel"
             Background="#1a1a1a"
             Padding="10"
             CornerRadius="14">
    
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="300"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1e1e1e"/>
            <Setter Property="Padding" Value="11"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#aaaaaa"/>
            <Setter Property="Foreground" Value="#1e1e1e"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="100, *,50">
        
        <Grid Grid.Column="0" Grid.Row="0">
            <TextBlock Text="{Binding Tourney.Name}"
                       FontSize="30" 
                       HorizontalAlignment="Center" 
                       FontFamily="Roboto"
                       Margin="10,10"/>

        </Grid>
        
        
        <Grid Grid.Row = "1" Grid.Column="0" IsVisible="{Binding IsEliminationTourney}">
            <views:EliminationTourneyView DataContext="{Binding EliminationTourneyViewModel}"/>
        </Grid>
        
        <Grid Grid.Row = "1" Grid.Column="0" IsVisible="{Binding IsVersusTourney}">
            <views:VersusTourneyView DataContext="{Binding VersusTourneyViewModel}"/>
        </Grid>

        
        <Grid Grid.Row="2" ColumnDefinitions="10*,100,10,100,*">
            <Button Grid.Column="1" 
                    Content="Discard" 
                    Padding="20,10"
                    HorizontalAlignment="Right" 
                    Command="{Binding DiscardTourneyCommand}"
                    />
            <Button Grid.Column="3" 
                    Content="Save"
                    IsEnabled="{Binding IsFinished}"
                    Padding="27,10"
                    HorizontalAlignment="Right" 
                    Command="{Binding SaveTourneyCommand}"
                    />
        </Grid>
    </Grid>
    
</UserControl>
