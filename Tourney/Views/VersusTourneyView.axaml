<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Tourney.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tourney.Views.VersusTourneyView"
             x:DataType="viewModels:VersusTourneyViewModel">
    
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="300"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1e1e1e"/>
            <Setter Property="Padding" Value="20,5"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
                
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#aaaaaa"/>
            <Setter Property="Foreground" Value="#1e1e1e"/>
            <Setter Property="Padding" Value="20,5"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Styles>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        
    <Border Background="#101010" CornerRadius="10" MinHeight="200" Padding="30">
        <Grid ColumnDefinitions="*,200,200,200,*" RowDefinitions="10,150,30,2*">
           
            <Grid Grid.Column="1" Grid.Row="1">
                <StackPanel>
                    <Svg Path="{Binding VersusTourney.Team1.IconPath}"
                         Width="60"
                         Height="60"
                         Css="{Binding VersusTourney.Team1.Color, StringFormat='.Black {{ fill: {0}; }}'}"
                    />
                    <TextBlock Text="{Binding VersusTourney.Team1.Name}"
                               Foreground="{Binding VersusTourney.Team1.Color}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="30"/>
                </StackPanel>
            </Grid>
            
            <Grid Grid.Column="2" Grid.Row="1">
                <StackPanel>
                    <TextBlock Text="{Binding VersusTourney.TotalRounds, StringFormat='Best of {0}'}"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="15"/>
                    <TextBlock Text="VS"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="20"/>
                    
                    <TextBlock Text="{Binding ScoreString}"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,10,0,0"
                               FontSize="50"/>
                </StackPanel>
            </Grid>
            
            
            <Grid Grid.Column="3" Grid.Row="1">
                <StackPanel>
                    <Svg Path="{Binding VersusTourney.Team2.IconPath}"
                         Width="60"
                         Height="60"
                         Css="{Binding VersusTourney.Team2.Color, StringFormat='.Black {{ fill: {0}; }}'}"
                    />
                    <TextBlock Text="{Binding VersusTourney.Team2.Name}"
                               Foreground="{Binding VersusTourney.Team2.Color}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="30"/>
                </StackPanel>
            </Grid>
            
            
            <Grid Grid.Column="2" Grid.Row="2">
                <Grid ColumnDefinitions="*,*">
                    <Button Grid.Column="0" Content="Win"
                            HorizontalAlignment="Center"
                            IsVisible="{Binding !IsFinished}"
                            Command="{Binding WinRoundCommand}"
                            CommandParameter="{Binding VersusTourney.Team1}"
                    />
                    
                    <Button Grid.Column="1" Content="Win"
                            HorizontalAlignment="Center"
                            IsVisible="{Binding !IsFinished}"
                            Command="{Binding WinRoundCommand}"
                            CommandParameter="{Binding VersusTourney.Team2}"
                    />
                </Grid>
            </Grid>
            
            
            <Grid Grid.Column="2" Grid.Row="3">
                <ItemsControl ItemsSource="{Binding Rounds}" HorizontalAlignment="Stretch">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                
                            <StackPanel IsVisible="{Binding Item1}"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Spacing="60">
                                <PathIcon Data="{StaticResource CheckmarkIcon}" Width="30"
                                          Height="35" Foreground="White"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"
                                          Margin="5"/>
                                <PathIcon  Data="{StaticResource CrossIcon}" Width="30"
                                          Height="20" Foreground="Gray"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"
                                          Margin="5"/>
                            </StackPanel>
                            
                            <StackPanel IsVisible="{Binding Item2}" 
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Spacing="60">
                                <PathIcon  Data="{StaticResource CrossIcon}" Width="30"
                                          Height="20" Foreground="Gray"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"
                                          Margin="5"/>
                                <PathIcon  Data="{StaticResource CheckmarkIcon}" Width="30"
                                          Height="35" Foreground="White"
                                          VerticalAlignment="Center" HorizontalAlignment="Center"
                                          Margin="5"/>
                            </StackPanel>
                            
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl> 
            </Grid>
                
            <Grid Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" IsVisible="{Binding Winner1}">
                <PathIcon Data="{StaticResource TrophyIcon}" Width="100"
                          Height="100" Foreground="White"
                          VerticalAlignment="Top" HorizontalAlignment="Center"/>
            </Grid>
            
            <Grid Grid.Column="3" Grid.Row="2" Grid.RowSpan="2" IsVisible="{Binding Winner2}">
                <PathIcon Data="{StaticResource TrophyIcon}" Width="100"
                          Height="100" Foreground="White"
                          VerticalAlignment="Top" HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </Border>
    </ScrollViewer>
</UserControl>
