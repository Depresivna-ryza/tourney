<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Tourney.Views;assembly=Tourney"
             xmlns:viewModels="clr-namespace:Tourney.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1800" d:DesignHeight="1450"
             x:Class="Tourney.Views.TourneyView"
             x:DataType="viewModels:TourneyViewModel"
             >
    
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        
    <Border Background="#101010" CornerRadius="10" MinWidth="1500" MinHeight="600" Padding="30">
        
    <Grid ColumnDefinitions="*,300,*,*,300,*,*,300,* " RowDefinitions="*,*,*,*,*,*,*,*">
        
        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
            <views:MatchView DataContext="{Binding Round1[0]}"/>
        </Grid>
        
        <Grid Grid.Column="1" Grid.Row="2" Grid.RowSpan="2">
            <views:MatchView DataContext="{Binding Round1[1]}"/>
        </Grid>
        
        <Grid Grid.Column="1" Grid.Row="4" Grid.RowSpan="2">
            <views:MatchView DataContext="{Binding Round1[2]}"/>
        </Grid>
        
        <Grid Grid.Column="1" Grid.Row="6" Grid.RowSpan="2">
            <views:MatchView DataContext="{Binding Round1[3]}"/>
        </Grid>
        
        <Grid Grid.Column="4" Grid.Row="0" Grid.RowSpan="4">
            <views:MatchView DataContext="{Binding Round2[0]}"/>
        </Grid>
        
        <Grid Grid.Column="4" Grid.Row="4" Grid.RowSpan="4">
            <views:MatchView DataContext="{Binding Round2[1]}"/>
        </Grid>
        
        <Grid Grid.Column="7" Grid.Row="0" Grid.RowSpan="8">
            <views:MatchView DataContext="{Binding Round3[0]}"/>
        </Grid>
        
        <Grid Grid.Column="7" Grid.Row="0" Grid.RowSpan="3">
            <PathIcon Data="{StaticResource TrophyIcon}" Width="100" Height="100" Foreground="{Binding TrophyColor}" VerticalAlignment="Bottom" />
        </Grid>
        
        
        
        
        <!-- add grid lines -->
        
        <Grid Grid.Column="2" Grid.Row="0" Grid.RowSpan="2">
            <Border Height="5" CornerRadius="5" Margin="10,0,0,0" Background="#404040" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="2" Grid.RowSpan="2">
            <Border Height="5" CornerRadius="5" Margin="10,0,0,0" Background="#404040" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="4" Grid.RowSpan="2">
            <Border Height="5" CornerRadius="5" Margin="10,0,0,0" Background="#404040" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="6" Grid.RowSpan="2">
            <Border Height="5" CornerRadius="5" Margin="10,0,0,0" Background="#404040" VerticalAlignment="Center"/>
        </Grid>
        
        
        
        <Grid Grid.Column="3" Grid.Row="1" Grid.RowSpan="2">
            <Border Height="5" CornerRadius="5" Margin="0,0,10,0" Background="#404040" />
        </Grid>        
        <Grid Grid.Column="3" Grid.Row="5" Grid.RowSpan="2">
            <Border Height="5" CornerRadius="5" Margin="0,0,10,0" Background="#404040" />
        </Grid>

        
        <Grid Grid.Column="2"  Grid.Row="1" Grid.RowSpan="2">
            <Border Width="5" CornerRadius="5" Background="#404040" HorizontalAlignment="Right"/>
        </Grid>
        <Grid Grid.Column="2"  Grid.Row="5" Grid.RowSpan="2">
            <Border Width="5" CornerRadius="5" Background="#404040" HorizontalAlignment="Right"/>
        </Grid>

        
        
        
        <Grid Grid.Column="5" Grid.Row="0" Grid.RowSpan="4">
            <Border Height="5" CornerRadius="5" Margin="10,0,0,0" Background="#404040" VerticalAlignment="Center"/>
        </Grid>
        <Grid Grid.Column="5" Grid.Row="4" Grid.RowSpan="4">
            <Border Height="5" CornerRadius="5" Margin="10,0,0,0" Background="#404040" VerticalAlignment="Center"/>
        </Grid>
        
        <Grid Grid.Column="6" Grid.Row="3" Grid.RowSpan="2">
            <Border Height="5" CornerRadius="5" Margin="0,0,10,0" Background="#404040" />
        </Grid>
        
        
        <Grid Grid.Column="5"  Grid.Row="2" Grid.RowSpan="4">
            <Border Width="5" CornerRadius="5" Background="#404040" HorizontalAlignment="Right"/>
        </Grid>
        
    </Grid>
    </Border>
    </ScrollViewer>
</UserControl>
        

            
