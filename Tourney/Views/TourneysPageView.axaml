<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Tourney.Views;assembly=Tourney"
             xmlns:viewModels="clr-namespace:Tourney.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Tourney.Views.TourneysPageView"
             x:DataType="viewModels:TourneysPageViewModel">
    
    <Grid ColumnDefinitions="*,*">
        <ListBox Grid.Column="0" 
                 ItemsSource="{Binding Tourneys}" 
                 SelectedItem="{Binding SelectedTourney}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Grid.Column="1" Text="{Binding SelectedTourney.Name}">
            
        </TextBlock>
         
        
        <views:OngoingTourneyView Grid.Column="1" DataContext="{Binding SelectedTourney}"/>
    </Grid>

</UserControl>
