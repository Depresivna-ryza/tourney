<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Tourney.ViewModels"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="100"
             x:Class="Tourney.Views.MatchView"
             x:DataType="viewModels:MatchViewModel">
    
            <UserControl.Styles>
                <Style Selector="Button">
                    <Setter Property="CornerRadius" Value="300"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="#1e1e1e"/>
                    <Setter Property="Padding" Value="20,5"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                
                <Style Selector="Button:pointerover /template/ ContentPresenter">
                    <Setter Property="Background" Value="#aaaaaa"/>
                    <Setter Property="Foreground" Value="#1e1e1e"/>
                    <Setter Property="Padding" Value="20,5"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </UserControl.Styles>
            
    
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid Height="20">
                    <TextBlock Text="{Binding ElapsedTime, StringFormat={}{0:mm\\:ss}}"
                               IsVisible="{Binding InProgress}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"/>
                
                    <TextBlock Text="{Binding Match.Duration, StringFormat={}{0:mm\\:ss}}"
                               IsVisible="{Binding Finished}"
                               Foreground="#808080"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"/>
                </Grid>
                
    
                <Border Background="#151515" 
                        CornerRadius="8"
                        BorderThickness="1"
                        BorderBrush="#aaaaaa"
                        Width="300"
                        Height="100"
                        BoxShadow="0 0 15 0 #303030"
                >
                    
                <Grid ColumnDefinitions="150,150" RowDefinitions="0,60,40"  VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid Grid.Row="1" Grid.Column="0">
                        <TextBlock Text="{Binding Match.Team1.Name}"
                                   Foreground="{Binding Color1}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,0,0,0"   
                                   FontSize="20"/>
                    </Grid>               
                    
                    <Grid Grid.Row="1" Grid.Column="1">
                        <TextBlock Text="{Binding Match.Team2.Name}"
                                   Foreground="{Binding Color2}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,0,0,0"       
                                   FontSize="20"/>
                    </Grid>
                    
                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                        <Border Height="1" Background="#404040" Margin="80, 0" VerticalAlignment="Bottom"/>
                    </Grid>
                    
                    
                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                        
                        <Border Background="Transparent" Height="32" Width="32" CornerRadius="20" Margin="20,0">
                        
                            <TextBlock Text="vs"
                                       Foreground = "{Binding VsColor}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Heavy"
                                       FontSize="20"/>
                        </Border>
                    </Grid>
                    
                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                        <Button Content="Start"
                                IsEnabled="False"
                                IsVisible="{Binding NotStarted}"
                                HorizontalAlignment="Center"
                                />
                    </Grid>
                    
                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                        <Button Content="Start"
                                HorizontalAlignment="Center"
                                IsVisible="{Binding ReadyToStart}"
                                Command="{Binding StartMatchCommand}"
                                />
                    </Grid>
                    
                    
                    <Grid Grid.Row="2" Grid.Column="0">
                        <Button Content="Win"
                                HorizontalAlignment="Center"
                                IsVisible="{Binding InProgress}"
                                Command="{Binding EndMatchCommand}"
                                CommandParameter="{Binding Match.Team1}"
                                />
                    </Grid>
                    
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Button Content="Win"
                                HorizontalAlignment="Center"
                                IsVisible="{Binding InProgress}"
                                Command="{Binding EndMatchCommand}"
                                CommandParameter="{Binding Match.Team2}"
                                />
                    </Grid>
                    
                    
                    <Grid Grid.Row="2" Grid.Column="0">
                        <TextBlock Text="Winner"
                                Padding="20,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsVisible="{Binding Winner1}"
                        />
                    </Grid>
                    
                    <Grid Grid.Row="2" Grid.Column="1">
                        <TextBlock Text="Winner"
                                   Padding="20,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   IsVisible="{Binding Winner2}"/>
                    </Grid>
                    
                </Grid>
                </Border>
            </StackPanel>
</UserControl>
